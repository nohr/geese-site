---

const themeColor = "#B66F13";
---

<div
style={{
  border: `3px solid ${themeColor}`,
  backgroundColor: "white",
  left: "50%",
  top: "50%",
  zIndex: 100,
  transform: "translate(-50%,-50%)",
}}
class={`modal absolute hidden h-min w-4/5 flex-col gap-y-5 rounded-lg p-4 pt-8 md:w-72`}
>
<div
  class="close absolute top-1 right-1 m-2 h-8 w-auto cursor-pointer md:h-6"
>Close</div>
<p style={{ color: themeColor }} class="text-center">
  Join our newsletter
</p>
<div id="mc_embed_signup">
  <form
    action="https://geeseband.us7.list-manage.com/subscribe/post?u=44a993044898cd57f20e98113&amp;id=8d26f98d1a&amp;f_id=00d6d0e4f0"
    method="post"
    id="mc-embedded-subscribe-form"
    name="mc-embedded-subscribe-form"
    class="validate"
    target="_self"
  >
    <div
      id="mc_embed_signup_scroll"
      class="flex flex-col items-center gap-y-2"
    >
      <div class="mc-field-group">
        <input
          type="email"
          name="EMAIL"
          class="rounded-md  border-2 p-2 outline-none invalid:border-red-500"
          id="mce-EMAIL"
          placeholder="Email Address"
          required
        />
      </div>
      <div id="mce-responses" class="clear">
        <div
          class="response"
          id="mce-error-response"
          style={{ display: "none" }}
        ></div>
        <div
          class="response"
          id="mce-success-response"
          style={{ display: "none" }}
        ></div>
      </div>
      <div
        style={{ position: "absolute", left: "-5000px" }}
        aria-hidden="true"
      >
        <input
          type="text"
          name="b_44a993044898cd57f20e98113_8d26f98d1a"
          tab-index={-1}
          value=""
        />
      </div>
      <div class="clear">
        <input
          type="submit"
          value="Subscribe"
          name="subscribe"
          id="mc-embedded-subscribe"
          class="w-min cursor-pointer rounded-md p-2 text-white"
          style={{ backgroundColor: themeColor }}
        />
      </div>
    </div>
  </form>
</div>
</div>
<script>
    const modal = document.querySelector(".modal") as HTMLDivElement;
    const close = document.querySelector(".close") as HTMLDivElement;
    const closeModal = () => 
        modal.style.display = "none";
    close.addEventListener("click", closeModal);
</script>